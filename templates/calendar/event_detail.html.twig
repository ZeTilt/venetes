{% extends 'plongee_base.html.twig' %}
{% import '_macros/avatar.html.twig' as avatar_macro %}

{% block title %}{{ event.title }} - Calendrier - Club Subaquatique des V√©n√®tes{% endblock %}

{% block body %}
<div class="bg-white py-8">
    <div class="mx-auto max-w-4xl px-6 lg:px-8">
        <!-- Navigation -->
        <div class="mb-8">
            <a href="{{ path('public_calendar') }}" 
               class="inline-flex items-center text-club-orange hover:text-club-orange-dark font-medium">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Retour au calendrier
            </a>
        </div>

        <!-- D√©tail de l'√©v√©nement -->
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
            <!-- Header color√© -->
            <div class="px-8 py-6" style="background-color: {{ event.color ?? '#FD7E29' }}">
                <div class="flex items-start justify-between">
                    <div class="text-white">
                        <h1 class="text-3xl font-bold mb-2">{{ event.title }}</h1>
                        <div class="flex items-center text-white/90">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <span>
                                {{ event.startDate|date_fr('full') }}
                                {% if event.endDate and event.endDate != event.startDate %}
                                    - {{ event.endDate|date_fr('time') }}
                                {% endif %}
                            </span>
                        </div>
                    </div>
                    <span class="bg-white/20 text-white px-3 py-1 rounded-full text-sm font-medium">
                        {{ event.typeDisplayName }}
                    </span>
                </div>
            </div>

            <!-- Contenu -->
            <div class="px-8 py-6 space-y-6">
                    <!-- Section Participation en pleine largeur -->
                        <!-- Participation -->
                        {% if event.maxParticipants %}
                            <div class="bg-gray-50 rounded-lg p-6 mb-6">
                                <h3 class="text-lg font-semibold text-club-blue mb-4">üë• Participation</h3>
                                
                                <div class="text-center mb-4">
                                    <div class="text-3xl font-bold text-club-orange">
                                        {{ event.activeParticipants }}
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        sur {{ event.maxParticipants }} places
                                    </div>
                                </div>

                                <!-- Barre de progression -->
                                <div class="mb-4">
                                    {% set percentage = event.maxParticipants > 0 ? (event.activeParticipants / event.maxParticipants * 100) : 0 %}
                                    <div class="w-full bg-gray-200 rounded-full h-3">
                                        <div class="bg-club-orange h-3 rounded-full transition-all duration-300" 
                                             style="width: {{ percentage }}%"></div>
                                    </div>
                                </div>

                                {% if event.isFullyBooked %}
                                    <div class="bg-red-50 border border-red-200 rounded-lg p-4 text-center">
                                        <div class="text-red-600 font-semibold mb-1">Complet</div>
                                        <div class="text-red-500 text-sm">Aucune place disponible</div>
                                    </div>
                                {% else %}
                                    {% if app.user %}
                                        {% if event.isUserRegistered(app.user) %}
                                            <!-- Utilisateur d√©j√† inscrit -->
                                            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                                <div class="text-blue-600 font-semibold mb-3 text-center">
                                                    ‚úÖ Vous √™tes inscrit √† cet √©v√©nement
                                                </div>
                                                <form method="POST" action="{{ path('event_unregister', {id: event.id}) }}"
                                                      onsubmit="return confirm('√ätes-vous s√ªr de vouloir vous d√©sinscrire de cet √©v√©nement ?')">
                                                    <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md font-medium transition-colors">
                                                        Se d√©sinscrire
                                                    </button>
                                                </form>
                                            </div>
                                        {% else %}
                                            {% set eligibilityIssues = event.checkUserEligibility(app.user) %}
                                            {% if eligibilityIssues|length == 0 %}
                                                <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                                                    <div class="text-green-600 font-semibold mb-3 text-center">
                                                        {{ event.availableSpots }} place(s) disponible(s)
                                                    </div>
                                                <form method="POST" action="{{ path('event_register', {id: event.id}) }}" class="space-y-3">
                                                    <!-- Nombre de places -->
                                                    <div>
                                                        <label class="block text-sm font-medium text-gray-700 mb-2">
                                                            Nombre de places
                                                        </label>
                                                        <input type="number" name="quantity" min="1" max="10" value="1"
                                                               class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-club-orange focus:border-club-orange">
                                                    </div>

                                                    <!-- Type de participation si instructeur -->
                                                    {% if app.user.isInstructor() %}
                                                        <div>
                                                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                                                Type de participation
                                                            </label>
                                                            <div class="space-y-2">
                                                                <label class="flex items-center p-2 bg-white border border-gray-200 rounded-md cursor-pointer hover:bg-gray-50">
                                                                    <input type="radio" name="participation_type" value="instructor" checked class="mr-3 text-club-orange focus:ring-club-orange">
                                                                    <div class="flex-1">
                                                                        <div class="font-medium text-sm">üë®‚Äçüè´ Encadrant</div>
                                                                        <div class="text-xs text-gray-500">Je participe en tant qu'encadrant</div>
                                                                    </div>
                                                                </label>
                                                                <label class="flex items-center p-2 bg-white border border-gray-200 rounded-md cursor-pointer hover:bg-gray-50">
                                                                    <input type="radio" name="participation_type" value="autonomous" class="mr-3 text-club-orange focus:ring-club-orange">
                                                                    <div class="flex-1">
                                                                        <div class="font-medium text-sm">ü§ø Autonome</div>
                                                                        <div class="text-xs text-gray-500">Je participe de fa√ßon autonome</div>
                                                                    </div>
                                                                </label>
                                                            </div>
                                                        </div>
                                                    {% endif %}

                                                    <!-- Option surveillant de baignade si type d'√©v√©nement le requiert ET que l'utilisateur est surveillant -->
                                                    {% if event.eventType and event.eventType.requiresLifeguard() and app.user.isLifeguard() %}
                                                        <div>
                                                            <label class="flex items-center p-3 bg-blue-50 border border-blue-200 rounded-md cursor-pointer hover:bg-blue-100">
                                                                <input type="checkbox" name="is_lifeguard" value="1" class="h-4 w-4 text-club-orange focus:ring-club-orange border-gray-300 rounded">
                                                                <div class="ml-3 flex-1">
                                                                    <div class="font-medium text-sm text-blue-900">üèä Je participe en tant que surveillant de baignade</div>
                                                                    <div class="text-xs text-blue-700">Je m'inscris comme surveillant pour cet √©v√©nement</div>
                                                                </div>
                                                            </label>
                                                        </div>
                                                    {% endif %}

                                                    <!-- Choix du point de rendez-vous si plusieurs options -->
                                                    {% if event.clubMeetingTime and event.siteMeetingTime %}
                                                        <div>
                                                            <label class="block text-sm font-medium text-gray-700 mb-2">
                                                                Point de rendez-vous
                                                            </label>
                                                            <div class="space-y-2">
                                                                <label class="flex items-center p-2 bg-white border border-gray-200 rounded-md cursor-pointer hover:bg-gray-50">
                                                                    <input type="radio" name="meeting_point" value="club" required class="mr-3 text-club-orange focus:ring-club-orange">
                                                                    <div class="flex-1">
                                                                        <div class="font-medium text-sm">üè† RDV au club</div>
                                                                        <div class="text-xs text-gray-500">{{ event.clubMeetingTime|date_fr('time') }}</div>
                                                                    </div>
                                                                </label>
                                                                <label class="flex items-center p-2 bg-white border border-gray-200 rounded-md cursor-pointer hover:bg-gray-50">
                                                                    <input type="radio" name="meeting_point" value="site" required class="mr-3 text-club-orange focus:ring-club-orange">
                                                                    <div class="flex-1">
                                                                        <div class="font-medium text-sm">üåä RDV sur site</div>
                                                                        <div class="text-xs text-gray-500">{{ event.siteMeetingTime|date_fr('time') }}</div>
                                                                    </div>
                                                                </label>
                                                            </div>
                                                        </div>
                                                    {% elseif event.clubMeetingTime %}
                                                        <input type="hidden" name="meeting_point" value="club">
                                                        <div class="bg-white border border-gray-200 rounded-md p-2 text-center">
                                                            <div class="font-medium text-sm">üè† RDV au club</div>
                                                            <div class="text-xs text-gray-500">{{ event.clubMeetingTime|date_fr('time') }}</div>
                                                        </div>
                                                    {% elseif event.siteMeetingTime %}
                                                        <input type="hidden" name="meeting_point" value="site">
                                                        <div class="bg-white border border-gray-200 rounded-md p-2 text-center">
                                                            <div class="font-medium text-sm">üåä RDV sur site</div>
                                                            <div class="text-xs text-gray-500">{{ event.siteMeetingTime|date_fr('time') }}</div>
                                                        </div>
                                                    {% endif %}

                                                    <button type="submit" class="w-full bg-club-orange hover:bg-club-orange-dark text-white px-4 py-2 rounded-md font-medium transition-colors">
                                                        S'inscrire
                                                    </button>
                                                </form>
                                            </div>
                                        {% else %}
                                            <div class="bg-red-50 border border-red-200 rounded-lg p-4">
                                                <div class="text-red-600 font-semibold mb-2 text-center">Conditions non remplies</div>
                                                <ul class="text-red-600 text-sm space-y-1 mb-3">
                                                    {% for issue in eligibilityIssues %}
                                                        <li class="flex items-start">
                                                            <svg class="w-4 h-4 mr-1 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                                            </svg>
                                                            {{ issue }}
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                                <button disabled class="w-full bg-gray-300 text-gray-500 px-4 py-2 rounded-md font-medium cursor-not-allowed">
                                                    Inscription non disponible
                                                </button>
                                            </div>
                                            {% endif %}
                                        {% endif %}
                                    {% else %}
                                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 text-center">
                                            <div class="text-blue-600 font-semibold mb-1">
                                                {{ event.availableSpots }} place(s) disponible(s)
                                            </div>
                                            <a href="{{ path('app_login') }}" class="mt-2 w-full inline-block bg-club-orange hover:bg-club-orange-dark text-white px-4 py-2 rounded-md font-medium transition-colors text-center">
                                                Se connecter pour s'inscrire
                                            </a>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </div>
                        {% endif %}

                <!-- Informations de l'√©v√©nement (en pleine largeur) -->
                <div class="grid md:grid-cols-2 gap-6">
                    <!-- Informations pratiques -->
                    <div class="bg-gray-50 rounded-lg p-6">
                        <h3 class="text-lg font-semibold text-club-blue mb-4">‚ÑπÔ∏è Informations pratiques</h3>
                        <div class="space-y-4">
                            <div>
                                <h4 class="text-sm font-semibold text-gray-600 mb-2">üìÖ Horaires</h4>
                                <div class="text-gray-700 space-y-1 text-sm">
                                    <div><strong>D√©but:</strong> {{ event.startDate|date_fr('datetime') }}</div>
                                    {% if event.endDate %}
                                        <div><strong>Fin:</strong> {{ event.endDate|date_fr('datetime') }}</div>
                                    {% endif %}
                                </div>
                            </div>

                            {% if event.location %}
                                <div>
                                    <h4 class="text-sm font-semibold text-gray-600 mb-2">üìç Lieu</h4>
                                    <div class="text-gray-700 text-sm">{{ event.location }}</div>
                                </div>
                            {% endif %}

                            <div>
                                <h4 class="text-sm font-semibold text-gray-600 mb-2">üìã Type et statut</h4>
                                <div class="space-y-2 text-sm">
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-600">Type:</span>
                                        <span class="font-medium">{{ event.typeDisplayName }}</span>
                                    </div>
                                    <div class="flex items-center justify-between">
                                        <span class="text-gray-600">Statut:</span>
                                        <span class="font-medium">{{ event.statusDisplayName }}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Organisation (DP, Pilote, Surveillant, Bateau) - Affichage conditionnel selon le type d'√©v√©nement -->
                    {% set showDp = event.eventType and event.eventType.requiresDivingDirector() and event.divingDirector %}
                    {% set showPilot = event.eventType and event.eventType.requiresPilot() and event.pilot %}
                    {% set showLifeguard = event.eventType and event.eventType.requiresLifeguard() and event.lifeguard %}
                    {% set needsLifeguard = event.eventType and event.eventType.requiresLifeguard() and not event.lifeguard %}
                    {% set canVolunteerAsLifeguard = needsLifeguard and app.user and app.user.isLifeguard() %}
                    {% set showBoat = event.boat %}

                    {% if showDp or showPilot or showLifeguard or showBoat or canVolunteerAsLifeguard %}
                        <div class="bg-gradient-to-br from-club-blue/5 to-club-blue/10 rounded-lg p-6 border border-club-blue/20">
                            <div class="flex items-center justify-between mb-4">
                                <h3 class="text-lg font-semibold text-club-blue">üë• Organisation</h3>
                                {% if app.user and showDp and app.user.id == event.divingDirector.id %}
                                    <a href="{{ path('dp_events_participants', {id: event.id}) }}"
                                       class="inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-md text-white bg-club-orange hover:bg-club-orange-dark transition-colors">
                                        <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                                        </svg>
                                        Fiche DP
                                    </a>
                                {% endif %}
                            </div>
                            <div class="space-y-3">
                                {% if showDp %}
                                    <div class="flex items-start p-3 bg-white rounded-lg">
                                        <span class="text-2xl mr-3">ü§ø</span>
                                        <div class="flex-1">
                                            <div class="text-xs font-medium text-gray-500 mb-1">Directeur de Plong√©e</div>
                                            <div class="font-semibold text-club-blue">{{ event.divingDirector.fullName }}</div>
                                        </div>
                                    </div>
                                {% endif %}

                                {% if showPilot %}
                                    <div class="flex items-start p-3 bg-white rounded-lg">
                                        <span class="text-2xl mr-3">‚õµ</span>
                                        <div class="flex-1">
                                            <div class="text-xs font-medium text-gray-500 mb-1">Pilote</div>
                                            <div class="font-semibold text-club-blue">{{ event.pilot.fullName }}</div>
                                        </div>
                                    </div>
                                {% endif %}

                                {% if showLifeguard %}
                                    <div class="flex items-start p-3 bg-white rounded-lg">
                                        <span class="text-2xl mr-3">üèä</span>
                                        <div class="flex-1">
                                            <div class="text-xs font-medium text-gray-500 mb-1">Surveillant de baignade</div>
                                            <div class="font-semibold text-club-blue">{{ event.lifeguard.fullName }}</div>
                                            {% if app.user and app.user.id == event.lifeguard.id %}
                                                <form method="POST" action="{{ path('event_unvolunteer_lifeguard', {id: event.id}) }}" class="mt-2">
                                                    <button type="submit" class="text-xs text-red-600 hover:text-red-800 underline">
                                                        Me retirer comme surveillant
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% elseif needsLifeguard %}
                                    <div class="flex items-start p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                                        <span class="text-2xl mr-3">üèä</span>
                                        <div class="flex-1">
                                            <div class="text-xs font-medium text-yellow-700 mb-1">Surveillant de baignade</div>
                                            <div class="font-semibold text-yellow-800">Poste √† pourvoir</div>
                                            {% if canVolunteerAsLifeguard %}
                                                <form method="POST" action="{{ path('event_volunteer_lifeguard', {id: event.id}) }}" class="mt-2">
                                                    <button type="submit" class="inline-flex items-center px-3 py-1.5 text-xs font-medium rounded-md text-white bg-green-600 hover:bg-green-700 transition-colors">
                                                        <svg class="h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                                        </svg>
                                                        Je me propose
                                                    </button>
                                                </form>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif %}

                                {% if showBoat %}
                                    <div class="flex items-start p-3 bg-white rounded-lg">
                                        <span class="text-2xl mr-3">üö§</span>
                                        <div class="flex-1">
                                            <div class="text-xs font-medium text-gray-500 mb-1">Bateau</div>
                                            <div class="font-semibold text-club-blue">{{ event.boat.name }}</div>
                                            {% if event.boat.capacity %}
                                                <div class="text-xs text-gray-500 mt-1">
                                                    Capacit√©: {{ event.boat.capacity }} personnes
                                                </div>
                                            {% endif %}
                                            {% if event.boat.description %}
                                                <div class="text-xs text-gray-600 mt-1">{{ event.boat.description }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endif %}

                                <!-- Contact si on a un DP -->
                                {% if showDp %}
                                    <div class="pt-3 border-t border-club-blue/20">
                                        <div class="text-xs text-gray-600">
                                            Pour toute question sur cet √©v√©nement, contactez le Directeur de Plong√©e.
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                </div>

                <!-- Description (si existe) -->
                {% if event.description %}
                    <div class="bg-white rounded-lg border border-gray-200 p-6">
                        <h3 class="text-lg font-semibold text-club-blue mb-4">üìù Description</h3>
                        <div class="prose max-w-none text-gray-700">
                            {{ event.description|nl2br }}
                        </div>
                    </div>
                {% endif %}

                <!-- Section Participants -->
                {% if event.activeParticipationsList|length > 0 or event.waitingListParticipations|length > 0 %}
                    <div class="mt-8 bg-gray-50 rounded-lg p-6">
                        <h2 class="text-xl font-bold text-club-blue mb-6">üë• Participants inscrits</h2>

                        <!-- Points de rendez-vous si d√©finis -->
                        {% if event.clubMeetingTime or event.siteMeetingTime %}
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-gray-800 mb-3">üìç Points de rendez-vous</h3>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    {% if event.clubMeetingTime %}
                                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                            <div class="flex items-center justify-between">
                                                <div>
                                                    <h4 class="font-medium text-blue-900">üè† RDV au club</h4>
                                                    <p class="text-sm text-blue-700">{{ event.clubMeetingTime|date_fr('time') }}</p>
                                                </div>
                                                <div class="text-right">
                                                    <div class="text-lg font-semibold text-blue-900">{{ event.clubMeetingParticipants|length }}</div>
                                                    <div class="text-xs text-blue-700">participant(s)</div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                    {% if event.siteMeetingTime %}
                                        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
                                            <div class="flex items-center justify-between">
                                                <div>
                                                    <h4 class="font-medium text-green-900">üåä RDV sur site</h4>
                                                    <p class="text-sm text-green-700">{{ event.siteMeetingTime|date_fr('time') }}</p>
                                                </div>
                                                <div class="text-right">
                                                    <div class="text-lg font-semibold text-green-900">{{ event.siteMeetingParticipants|length }}</div>
                                                    <div class="text-xs text-green-700">participant(s)</div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}

                        <!-- Participants inscrits -->
                        {% if event.activeParticipationsList|length > 0 %}
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-gray-800 mb-3">
                                    ‚úÖ Participants inscrits ({{ event.activeParticipationsList|length }})
                                </h3>
                                <div class="bg-white rounded-lg border border-gray-200 divide-y divide-gray-200">
                                    {% for participation in event.activeParticipationsList %}
                                        <div class="p-4">
                                            <div class="flex items-center justify-between">
                                                <div class="flex items-center space-x-3">
                                                    {{ avatar_macro.user_avatar(participation.participant, 'md') }}
                                                    <div>
                                                        <div class="font-medium text-gray-900">
                                                            {{ participation.participant.fullName }}
                                                        </div>
                                                        <div class="text-sm text-gray-500">
                                                            {% if participation.participant.highestDivingLevel %}
                                                                Niveau {{ participation.participant.highestDivingLevel.name }}
                                                            {% else %}
                                                                Niveau non renseign√©
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="flex items-center space-x-2">
                                                    {% if participation.participant.highestDivingLevel %}
                                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                                                            {{ participation.participant.highestDivingLevel.name }}
                                                        </span>
                                                    {% endif %}
                                                    {% if participation.isLifeguard() %}
                                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-500 text-white">
                                                            üèä Surveillant
                                                        </span>
                                                    {% endif %}
                                                    {% if participation.meetingPoint %}
                                                        {% if participation.meetingPoint == 'club' %}
                                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                                                                üè† Club
                                                            </span>
                                                        {% elseif participation.meetingPoint == 'site' %}
