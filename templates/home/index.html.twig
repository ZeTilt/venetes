{% extends 'plongee_base.html.twig' %}

{% block title %}Accueil - Club Subaquatique des Vénètes{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/carousel' ~ (app.environment == 'prod' ? '.min' : '') ~ '.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
<!-- Hero Carousel - Version vanilla JS optimisée -->
{% set heroImages = site_config('hero_images')|default('[]')|json_decode %}
{% if heroImages|length == 0 %}
    {% set heroImages = [
        asset('assets/images/IMG_1679-1080x500.webp'),
        asset('assets/images/IMG_1753-01-1080x500.webp'),
        asset('assets/images/DSC036181-1080x500.webp'),
        asset('assets/images/P1020334-1080x500.webp')
    ] %}
{% endif %}
<section class="hero-carousel" data-slides='[{% for image in heroImages %}{"image": "{{ image }}"}{% if not loop.last %},{% endif %}{% endfor %}]'>
    <div class="hero-slides">
        {# Le contenu sera généré par JavaScript #}
    </div>
</section>

<!-- Main Content Area -->
<div class="main-container">
    <div class="main-grid">

        <!-- Sidebar Left - Mini Calendrier -->
        <div class="main-sidebar">
            <div class="sidebar-card">
                <h3 class="sidebar-title">
                    <svg fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
                    </svg>
                    Prochains Événements
                </h3>

                <div class="events-list">
                    {% if upcoming_events is empty %}
                        <div class="events-empty">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            <p>Aucun événement prévu</p>
                        </div>
                    {% else %}
                        {% for event in upcoming_events %}
                            <div class="event-item" style="border-color: {{ event.color ?? '#FD7E29' }}">
                                <div class="event-title">
                                    <a href="{{ path('calendar_event_detail', {id: event.id}) }}">
                                        {{ event.title }}
                                    </a>
                                </div>
                                <div class="event-date">
                                    {{ event.startDate|date('l j F') }}
                                </div>
                                <div class="event-time" style="color: {{ event.color ?? '#FD7E29' }}">
                                    {{ event.startDate|date('H:i') }}
                                    {% if event.location %} - {{ event.location }}{% endif %}
                                </div>
                                {% if event.maxParticipants %}
                                    <div class="event-places">
                                        {{ event.currentParticipants }}/{{ event.maxParticipants }} places
                                        {% if event.isFullyBooked %}
                                            <span class="event-full">COMPLET</span>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>

                <div class="sidebar-footer">
                    <a href="{{ path('public_calendar') }}" class="sidebar-link">
                        Voir tout le calendrier →
                    </a>
                </div>
            </div>
        </div>
        
        <!-- Main Content - Articles de blog -->
        <div class="main-content">
            <h2 class="section-title">Dernières actualités</h2>

            <div class="articles-list">
                {% for article in blog_articles|slice(0, 5) %}
                <article class="article-card">
                    <!-- Article media (carousel or featured image) -->
                    {% set carousel_images = extract_carousel(article.content) %}
                    {% set all_images = extract_images(article.content) %}

                    {% if carousel_images and carousel_images|length > 1 %}
                        <!-- Carousel from article content -->
                        <div class="article-media">
                            <div class="article-carousel home-carousel" data-carousel-id="article-{{ article.id }}">
                                <div class="carousel-container">
                                    {% for image in carousel_images %}
                                        <div class="carousel-slide {{ loop.first ? 'active' : '' }}" data-slide="{{ loop.index0 }}">
                                            {{ youtube_thumbnail_with_fallback(image|webp_thumb, 'Image ' ~ loop.index, '') }}
                                        </div>
                                    {% endfor %}
                                </div>

                                {% if carousel_images|length > 1 %}
                                    <!-- Navigation arrows -->
                                    <button class="carousel-prev">
                                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                                        </svg>
                                    </button>
                                    <button class="carousel-next">
                                        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </button>

                                    <!-- Indicators -->
                                    <div class="carousel-indicators">
                                        {% for image in carousel_images %}
                                            <button class="carousel-dot {{ loop.first ? 'active' : '' }}" data-slide="{{ loop.index0 }}"></button>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    {% elseif article.featuredImage %}
                        <!-- Featured image -->
                        <div class="article-media">
                            {{ youtube_thumbnail_with_fallback(article.featuredImage|webp_thumb, article.title, '') }}
                        </div>
                    {% elseif all_images and all_images|length > 0 %}
                        <!-- First image from content -->
                        <div class="article-media">
                            {{ youtube_thumbnail_with_fallback(all_images[0]|webp_thumb, article.title, '') }}
                        </div>
                    {% else %}
                        <!-- Fallback placeholder -->
                        <div class="article-placeholder">
                            <div class="article-placeholder-content">
                                <svg fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
                                </svg>
                                <p>Image à venir</p>
                            </div>
                        </div>
                    {% endif %}

                    <div class="article-body">
                        <div class="article-meta">
                            <time datetime="{{ article.publishedAt|date('Y-m-d') }}">
                                {{ article.publishedAt|date('d F Y') }}
                            </time>
                            {% if article.tags|length > 0 %}
                                <span class="separator">•</span>
                                <div class="article-tags">
                                    {% for tag in article.tags|slice(0, 2) %}
                                        <span class="article-tag">{{ tag }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <h3 class="article-title">
                            <a href="{{ path('public_article_show', {slug: article.slug}) }}">{{ article.title }}</a>
                        </h3>

                        <p class="article-excerpt">{{ article.excerpt }}</p>

                        <a href="{{ path('public_article_show', {slug: article.slug}) }}" class="article-readmore">
                            Lire la suite
                            <svg fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                            </svg>
                        </a>
                    </div>
                </article>
                {% else %}
                <div class="empty-state">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
                    </svg>
                    <h3 class="empty-state-title">Aucun article publié</h3>
                    <p class="empty-state-text">Les actualités du club apparaîtront ici.</p>
                </div>
                {% endfor %}
            </div>

            {% if blog_articles|length > 0 %}
            <div class="view-all">
                <a href="{{ path('blog_index') }}" class="view-all-btn">
                    Toutes les actualités
                    <svg fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                    </svg>
                </a>
            </div>
            {% endif %}
        </div>
        
    </div>
</div>

<!-- Call to Action Section -->
<section class="cta-section">
    <div class="cta-container">
        <div class="cta-content">
            <h2 class="cta-title">Prêt à plonger avec nous ?</h2>
            <p class="cta-text">
                Rejoignez le Club Subaquatique des Vénètes et découvrez les merveilles des fonds marins.
                Formation, convivialité et aventure vous attendent !
            </p>
            <div class="cta-buttons">
                <a href="{{ path('public_page_show', {slug: 'tarifs-2025'}) }}" class="cta-btn cta-btn-primary">
                    Voir nos tarifs
                </a>
                <a href="#contact" class="cta-btn cta-btn-secondary">
                    Nous contacter
                </a>
            </div>
        </div>
    </div>
</section>

{% endblock %}